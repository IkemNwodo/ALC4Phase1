<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProfileActivity">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="250dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardElevation="40dp"
            app:cardCornerRadius="10dp" android:id="@+id/cardView">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/alc"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFFFFF"
                android:layout_gravity="center"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ikem Nwodo"
                android:layout_gravity="bottom|center"
                android:textSize="32sp"
                android:textColor="#ffffff"/>
    </androidx.cardview.widget.CardView>

    <TextView
            android:text="Track:"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:id="@+id/track"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginStart="8dp"
            android:textSize="22sp" android:layout_marginTop="42dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline" app:layout_constraintGuide_begin="8dp"

                                                android:orientation="vertical"/>

    <TextView
            android:text="Country:"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:id="@+id/country"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@id/track"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"/>

    <TextView
            android:text="Email:"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:id="@+id/email"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@id/country"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"/>

    <TextView
            android:text="Phone Number:"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:id="@+id/phone_number"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@id/email"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"/>

    <TextView
            android:text="Slack Username:"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:id="@+id/slack_username"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@id/phone_number"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"/>
    <TextView
            android:text="Android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/android" app:layout_constraintStart_toEndOf="@+id/track"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.211"
            android:textSize="22sp"
            app:layout_constraintTop_toTopOf="@+id/guideline2"/>

    <TextView
            android:text="Nigeria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nigeria" app:layout_constraintStart_toEndOf="@+id/country"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.129"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@+id/android" android:layout_marginTop="12dp"/>

    <TextView
            android:text="nwodofrank@gmail.com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nwodofrank" app:layout_constraintStart_toEndOf="@+id/email"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.636"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@+id/nigeria" android:layout_marginTop="8dp"/>

    <TextView
            android:text="+2348152648017"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phone" app:layout_constraintStart_toEndOf="@+id/phone_number"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.559"
            android:textSize="22sp"
            android:layout_marginTop="9dp" app:layout_constraintTop_toBottomOf="@+id/nwodofrank"/>

    <TextView
            android:text="Ikem Nwodo"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/slack" app:layout_constraintStart_toEndOf="@+id/slack_username"
            android:layout_marginStart="4dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.225"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@+id/phone" android:layout_marginTop="12dp"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline2" app:layout_constraintGuide_begin="300dp"
                                                android:orientation="horizontal"/>


</androidx.constraintlayout.widget.ConstraintLayout>